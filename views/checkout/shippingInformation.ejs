<form class="shipping-form" action="/checkout" method="POST">
  <!-- Name -->
  <div class="form-group">
    <input type="hidden" name="userId" value="<%= user && user._id ? user._id : '' %>">
    <label for="name">Full Name *</label>
    <input 
      type="text" 
      name="name" 
      id="name" 
      value="<%= user ? user.name : '' %>" 
      class="form-control" 
      required>
  </div>  

  <!-- Email -->  
  <div class="form-group">
    <label for="email">Email Address (Optional)</label>
    <input 
      type="email" 
      name="email" 
      id="email" 
      value="<%= user ? user.email : '' %>" 
      class="form-control" 
      >
  </div>  

  <!-- Phone -->  
  <div class="form-group">
    <label for="phone">Phone Number *</label>
    <input 
  type="tel" 
  name="phone" 
  id="phone" 
  placeholder="Enter phone number" 
  class="form-control" 
  required
  value="<%= user && user.phoneNumber ? user.phoneNumber : '' %>">
  </div>  

  <!-- Delivery address partial, passing deliveryAddress -->
  <%- include('../partials/checkout/deliveryAddress', { districts, deliveryAddress }) %>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <button type="submit">Proceed</button>
</form>