<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Well Online</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Header with cart and user info -->
  <%- include('partials/header', { cartItemCount, user }) %>

  <!-- Filters (search, category, sort) -->
  <%- include('partials/productFilters', {
    categories,
    selectedCategory,
    sort,
    searchQuery,
    currentPage,
    limit
  }) %>

  <!-- Product listing -->
  <%- include('partials/productList', { products }) %>

  <!-- Pagination controls -->
  <%- include('partials/pagination', {
    currentPage,
    totalPages,
    selectedCategory,
    sort,
    limit,
    searchQuery
  }) %>

</body>
</html>