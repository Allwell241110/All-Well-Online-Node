<style>
    h1 { margin-bottom: 20px; }
    ul { list-style: none; padding: 0; }
    li { margin-bottom: 10px; }
    a {
      padding: 8px 12px;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    a:hover {
      background: #0056b3;
    }
  </style>
<a class="add-meta-category" href="/categories/static/add">Add</a>
<h1>Meta Categories</h1>
  <ul>
    <% metaCategories.forEach(meta => { %>
      <li>
        <strong><%= meta.name %></strong>
        <a href="/categories/meta/<%= meta._id %>/edit">Edit</a>
      </li>
    <% }) %>
  </ul>
