<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      padding: 20px;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }

    .product-card {
      background: white;
      border-radius: 8px;
      padding: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      text-align: center;
    }

    .product-card img {
      max-width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 4px;
    }

    .product-name {
      font-size: 16px;
      font-weight: bold;
      margin: 10px 0 5px;
    }

    .product-price {
      color: #27ae60;
      font-size: 14px;
      margin-bottom: 5px;
    }

    .product-category {
      color: #888;
      font-size: 13px;
    }
  </style>
</head>
<body>

  <h1>All Products</h1>

  <div class="product-grid">
    <% products.forEach(product => { %>
      <div class="product-card">
        <% if (product.images && product.images.length > 0) { %>
          <img src="<%= product.images[0].url %>" alt="<%= product.name %>">
        <% } else { %>
          <img src="https://via.placeholder.com/220x180?text=No+Image" alt="No image">
        <% } %>
        <div class="product-name"><%= product.name %></div>
        <div class="product-price">UGX <%= product.salePrice || product.price %></div>
      </div>
    <% }) %>
  </div>

</body>
</html>