<form method="GET" action="/products" class="product-filters">
  <input type="text" name="q" placeholder="Search..." value="<%= searchQuery || '' %>" />

  <select name="category">
    <option value="">All Categories</option>
    <% categories.forEach(cat => { %>
      <option value="<%= cat.slug %>" <%= selectedCategory === cat.slug ? 'selected' : '' %>>
        <%= cat.name %>
      </option>
    <% }) %>
  </select>

  <select name="sort">
    <option value="">Sort By</option>
    <option value="price-asc" <%= sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
    <option value="price-desc" <%= sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
    <option value="latest" <%= sort === 'latest' ? 'selected' : '' %>>Newest</option>
  </select>

  <button type="submit">Apply</button>
</form>