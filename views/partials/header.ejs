<div class="all-header">
  <!-- Logo Section -->
  <div class="logo-container">
    <img class="logo" src="/images/all_well_online.png" alt="All Well Online Logo">
    <h1 class="shop-name">All Well Online</h1>
  </div>

  <div class="header-container">
    <!-- Hamburger Icon (for mobile) -->
    <div class="hamburger" onclick="toggleMenu()">
      <div></div><div></div><div></div>
    </div>

    <!-- Sidebar Menu -->
    <div id="sidebar" class="sidebar">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/shop">Shop</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/contact">Contact</a></li>
    <li><a href="/cart">Cart (<%= cartItemCount %>)</a></li>
    <h1 class="categories">Categories</h1>
    <% if (metaCategories && metaCategories.length > 0) { %>
      <% metaCategories.forEach(category => { %>
        <li>
          <a href="/categories/main-categories/<%= category._id %>"><%= category.name %></a>
        </li>
      <% }); %>
    <% } %>
  </ul>
</div>

    <!-- Overlay to Close Sidebar -->
    <div id="overlay" class="overlay" onclick="closeMenu()"></div>

    <!-- Search Bar Form -->
    <form id="searchForm" class="search-bar">
      <input type="text" id="searchInput" placeholder="Search products..." required>
      <button type="submit">Search</button>
    </form>

    <!-- Cart Icon Section -->
    <div class="cart-icon">
      <a href="/cart">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 0 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
        </svg>
        <% if (cartItemCount > 0) { %>
          <span class="cart-count"><%= cartItemCount %></span>
        <% } %>
      </a>
    </div>

    <!-- User Login/Profile Section -->
    <div class="user-profile">
      <% if (user) { %>
        <a href="/profile" class="profile-link">
          <span><%= user.name %></span>
        </a>
        <form action="/auth/logout" method="POST" class="logout-form">
          <input type="hidden" name="redirectTo" value="<%= originalUrl %>">
          <button class="logout-btn" type="submit">Logout</button>
        </form>
      <% } else { %>
        <a class="login-btn" href="/auth/login" class="login-btn">Login</a>
      <% } %>
    </div>

  </div>
</div>

<script src="/js/header.js"></script>