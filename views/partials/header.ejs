<div class="all-header">
  <!-- Logo Section -->
  <div class="logo-container">
    <img class="logo" src="/images/all_well_online.png" alt="All Well Online Logo" loading="lazy">
    <h1 class="shop-name">All Well Online</h1>
  </div>

  <div class="header-container">
    <div class="hamburger-icons-wrapper">
    <!-- Hamburger Icon (for mobile) -->
    <div class="hamburger" onclick="toggleMenu()">
      <div></div><div></div><div></div>
    </div>
    <div class="cart-icon-profile-wrapper">
    <!-- Cart Icon Section -->
    <div class="cart-icon">
      <a href="/cart">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 0 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
        </svg>
        <% if (cartItemCount > 0) { %>
          <span class="cart-count"><%= cartItemCount %></span>
        <% } %>
      </a>
    </div>
    <!-- User Login/Profile Section -->
    <div class="user-profile">
      <% if (user) { %>
        <a 
          href="/dashboard/<%= user.role === 'admin' ? 'admin' : 'user' %>" 
          class="profile-link"
         >
      <span><%= user.name %></span>
    </a>
    <form action="/auth/logout" method="POST" class="logout-form">
      <input type="hidden" name="redirectTo" value="<%= originalUrl %>">
      <button class="logout-btn" type="submit">Logout</button>
    </form>
  <% } else { %>
    <a href="/auth/login" class="login-btn">Login</a>
  <% } %>
</div>
    </div>
    </div>


<!-- Sidebar Menu -->
<!-- Sidebar Menu -->
<div id="sidebar" class="sidebar">
  <div class="section">
    <h2 class="section-title">Navigation</h2>
    <ul class="links">
      <li><a href="/">Home</a></li>
      <li><a href="/products">Products</a></li>
      <li><a href="/cart">Cart (<%= cartItemCount %>)</a></li>
      <li><a href="/about">About</a></li>      
      <% if (user) { %>
        <li><a href="/dashboard/<%= user.role === 'admin' ? 'admin' : 'user' %>">Profile</a></li>
      <% } else { %>
        <li><a href="/auth/login">Login</a></li>
      <% } %>
    </ul>
  </div>

  <% if (user && user.role === 'admin') { %>
    <div class="section">
      <h2 class="section-title">Admin Panel</h2>
      <ul class="admin-links">
        <li><a href="/products/constant/product-nature">Add Product</a></li>
        <li><a href="/upload-csv">Bulk Upload</a></li>
        <li><a href="/categories/constant/all-categories">Manage Categories</a></li>
        <li><a href="/orders">Orders</a></li>
      </ul>
    </div>
  <% } %>

  <div class="section">
    <h2 class="section-title">Our Categories</h2>
    <ul class="categories">
      <% metaCategories.forEach(category => { %>
        <li>
          <a 
            href="/categories/main-categories/<%= category._id %>" 
            class="meta-category-link" 
            data-category-name="<%= category.name %>">
            <%= category.name %>
          </a>
        </li>
      <% }); %>
    </ul>
  </div>
</div>

    <!-- Overlay to Close Sidebar -->
    <div id="overlay" class="overlay" onclick="closeMenu()"></div>

    <!-- Search Bar Form -->
    <form id="searchForm" class="search-bar">
      <input type="text" id="searchInput" placeholder="Search products..." required>
      <button type="submit">Search</button>
    </form>

  </div>
</div>

<script src="/js/header.js"></script>